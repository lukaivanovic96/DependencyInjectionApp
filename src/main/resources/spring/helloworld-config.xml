<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWorldFactory" class="DependencyInjection.services.HelloWorldFactory"/>
    <bean id="french" factory-bean="helloWorldFactory" factory-method="createGreetingServiceImpl">
        <constructor-arg value="fr"/>
    </bean>
    <bean id="helloWorldServiceGerman" factory-bean="helloWorldFactory" factory-method="createGreetingServiceImpl">
        <constructor-arg value="de"/>
    </bean>
    <beans profile="english">
        <import resource="classpath*:spring/english-hello-config.xml"/>
    </beans>
    <beans profile="spanish">
        <import resource="classpath*:spring/spanish-hello-config.xml"/>
    </beans>
</beans>
